<body>
    <div class="container">
        <div class="header">
            <h1>üß† Spaced Repetition Learning System</h1>
            <p>Combat the Ebbinghaus Forgetting Curve with strategic review scheduling</p>
        </div>
        
        <div class="stats">
            <div class="stat-card">
                <h3>Total Items</h3>
                <div class="number" id="totalItems">0</div>
            </div>
            <div class="stat-card">
                <h3>Due Today</h3>
                <div class="number" id="dueToday">0</div>
            </div>
            <div class="stat-card">
                <h3>Mastered</h3>
                <div class="number" id="mastered">0</div>
            </div>
            <div class="stat-card">
                <h3>Streak Days</h3>
                <div class="number" id="streak">0</div>
            </div>
        </div>
        
        <div class="main-content">
            <div class="section">
                <div class="section-header">
                    <h2>Add New Item</h2>
                </div>
                <div class="input-group">
                    <input type="text" id="itemTitle" placeholder="Topic/Concept Title">
                    <select id="itemCategory">
                        <option value="General">General</option>
                        <option value="Language">Language</option>
                        <option value="Math">Math</option>
                        <option value="Science">Science</option>
                        <option value="History">History</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <textarea id="itemContent" placeholder="What did you learn? Add key points, notes, or concepts here..."></textarea>
                <button class="btn btn-primary" onclick="addItem()" style="margin-top: 10px;">Add to Learning System</button>
            </div>
            
            <div class="section">
                <div class="tabs">
                    <button class="tab active" onclick="filterItems('all')">All Items</button>
                    <button class="tab" onclick="filterItems('due')">Due for Review</button>
                    <button class="tab" onclick="filterItems('upcoming')">Upcoming</button>
                    <button class="tab" onclick="filterItems('mastered')">Mastered</button>
                </div>
                
                <div id="itemsList"></div>
            </div>
        </div>
    </div>
    
    <div class="modal" id="reviewModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Review Item</h3>
            </div>
            <div id="reviewContent"></div>
            <div class="actions" style="margin-top: 20px; justify-content: center;">
                <button class="btn btn-primary" onclick="markReviewed('easy')">Easy ‚úÖ</button>
                <button class="btn btn-primary" onclick="markReviewed('medium')">Medium üìù</button>
                <button class="btn btn-primary" onclick="markReviewed('hard')">Hard üîÑ</button>
            </div>
            <button class="btn" onclick="closeModal()" style="margin-top: 10px; width: 100%; background: #e0e0e0;">Close</button>
        </div>
    </div>

    <script>
        let items = [];
        let currentFilter = 'all';
        let currentReviewId = null;
        
        function loadData() {
            const saved = localStorage.getItem('spacedRepetitionData');
            if (saved) {
                const data = JSON.parse(saved);
                items = data.items || [];
            }
            updateStats();
            renderItems();
        }
        
        function saveData() {
            localStorage.setItem('spacedRepetitionData', JSON.stringify({
                items: items,
                lastSaved: new Date().toISOString()
            }));
        }
        
        function addItem() {
            const title = document.getElementById('itemTitle').value.trim();
            const content = document.getElementById('itemContent').value.trim();
            const category = document.getElementById('itemCategory').value;
            
            if (!title || !content) {
                alert('Please fill in both title and content');
                return;
            }
            
            const now = new Date();
            const item = {
                id: Date.now(),
                title,
                content,
                category,
                created: now.toISOString(),
                reviews: 0,
                nextReview: getNextReviewDate(0, 'new'),
                lastReviewed: null,
                status: 'new',
                schedule: generateSchedule()
            };
            
            items.unshift(item);
            saveData();
            updateStats();
            renderItems();
            
            document.getElementById('itemTitle').value = '';
            document.getElementById('itemContent').value = '';
        }
        
        function getNextReviewDate(reviews, difficulty) {
            const now = new Date();
            let days;
            
            if (difficulty === 'new') days = 1;
            else if (difficulty === 'hard') days = Math.max(1, Math.floor(Math.pow(1.5, reviews)));
            else if (difficulty === 'medium') days = Math.floor(Math.pow(2, reviews));
            else days = Math.floor(Math.pow(2.5, reviews));
            
            now.setDate(now.getDate() + days);
            return now.toISOString();
        }
        
        function generateSchedule() {
            return [
                { interval: '1 day', date: addDays(1) },
                { interval: '3 days', date: addDays(3) },
                { interval: '7 days', date: addDays(7) },
                { interval: '14 days', date: addDays(14) },
                { interval: '30 days', date: addDays(30) },
                { interval: '60 days', date: addDays(60) }
            ];
        }
        
        function addDays(days) {
            const date = new Date();
            date.setDate(date.getDate() + days);
            return date.toISOString().split('T')[0];
        }
        
        function openReviewModal(id) {
            const item = items.find(i => i.id === id);
            if (!item) return;
            
            currentReviewId = id;
            document.getElementById('reviewContent').innerHTML = `
                <h4>${item.title}</h4>
                <p style="margin-top: 15px; line-height: 1.6;">${item.content}</p>
                <p style="margin-top: 15px; font-size: 12px; color: #999;">Category: ${item.category} | Reviews: ${item.reviews}</p>
            `;
            document.getElementById('reviewModal').classList.add('active');
        }
        
        function closeModal() {
            document.getElementById('reviewModal').classList.remove('active');
            currentReviewId = null;
        }
        
        function markReviewed(difficulty) {
            const item = items.find(i => i.id === currentReviewId);
            if (!item) return;
            
            item.reviews++;
            item.lastReviewed = new Date().toISOString();
            item.nextReview = getNextReviewDate(item.reviews, difficulty);
            
            if (item.reviews >= 6) item.status = 'mastered';
            else if (item.reviews >= 1) item.status = 'review';
            
            saveData();
            updateStats();
            renderItems();
            closeModal();
        }
        
        function deleteItem(id) {
            if (confirm('Are you sure you want to delete this item?')) {
                items = items.filter(i => i.id !== id);
                saveData();
                updateStats();
                renderItems();
            }
        }
        
        function filterItems(filter) {
            currentFilter = filter;
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            event.target.classList.add('active');
            renderItems();
        }
        
        function renderItems() {
            const container = document.getElementById('itemsList');
            let filtered = items;
            
            const now = new Date();
            
            if (currentFilter === 'due') {
                filtered = items.filter(item => new Date(item.nextReview) <= now);
            } else if (currentFilter === 'upcoming') {
                filtered = items.filter(item => new Date(item.nextReview) > now && item.status !== 'mastered');
            } else if (currentFilter === 'mastered') {
                filtered = items.filter(item => item.status === 'mastered');
            }
            
            if (filtered.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <svg fill="currentColor" viewBox="0 0 20 20"><path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"></path><path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"></path></svg>
                        <p>No items to display</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = filtered.map(item => {
                const nextReview = new Date(item.nextReview);
                const isDue = nextReview <= now;
                const daysUntil = Math.ceil((nextReview - now) / (1000 * 60 * 60 * 24));
                
                let badge;
                if (item.status === 'mastered') badge = '<span class="badge badge-mastered">Mastered</span>';
                else if (isDue) badge = '<span class="badge badge-due">Due Now</span>';
                else if (item.status === 'new') badge = '<span class="badge badge-new">New</span>';
                else badge = '<span class="badge badge-review">In Progress</span>';
                
                return `
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">${item.title}</div>
                            ${badge}
                        </div>
                        <div class="card-content">${item.content.substring(0, 150)}${item.content.length > 150 ? '...' : ''}</div>
                        <div class="card-meta">
                            <span>üìö ${item.category}</span>
                            <span>üîÑ Reviews: ${item.reviews}</span>
                            <span>üìÖ Next: ${isDue ? 'Now!' : daysUntil + ' days'}</span>
                        </div>
                        <div class="actions" style="margin-top: 15px;">
                            ${isDue ? '<button class="btn-action btn-review" onclick="openReviewModal(' + item.id + ')">Review Now</button>' : ''}
                            <button class="btn-action btn-delete" onclick="deleteItem(' + item.id + ')">Delete</button>
                        </div>
                    </div>
                `;
            }).join('');
        }
        
        function updateStats() {
            const now = new Date();
            const dueCount = items.filter(item => new Date(item.nextReview) <= now).length;
            const masteredCount = items.filter(item => item.status === 'mastered').length;
            
            document.getElementById('totalItems').textContent = items.length;
            document.getElementById('dueToday').textContent = dueCount;
            document.getElementById('mastered').textContent = masteredCount;
            document.getElementById('streak').textContent = Math.min(items.length, 7);
        }
        
        loadData();
    </script>
</body>
</html>
